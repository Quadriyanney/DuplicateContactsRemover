<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="contact" type="com.r4sh33d.duplicatecontactsremover.model.Contact"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/contacts_background_drawable"
                android:text="@{contact.initials}"
                android:id="@+id/contact_initials"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#FFFFFF"
                tools:text="AR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:text="@{contact.fullName}"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:maxLines="1"
                tools:text="Ayobami Rasheed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fullName" android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/phoneNumbers"
                android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/contact_initials"
                android:layout_marginStart="16dp" app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:text="@{contact.multiLinedPhoneNumbers}"
                android:textColor="?android:textColorPrimary"
                tools:text="08127895655\n08165588923"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumbers"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/fullName"
                android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="@+id/fullName"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/checkBox"
                app:layout_constraintHorizontal_bias="0.0"/>

        <CheckBox
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/checkBox" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/fullName"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"/>

        <View android:background="@color/line_separator_color"
              android:layout_width="0dp"
              android:layout_height="0.5dp"
              android:layout_gravity="center_vertical"
              android:layout_weight="1" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/barrier"
              app:layout_constraintStart_toStartOf="@+id/phoneNumbers" android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="@+id/checkBox" android:layout_marginEnd="8dp"/>
        <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content" android:id="@+id/barrier"
                                                  app:barrierDirection="bottom"
                                                  app:constraint_referenced_ids="phoneNumbers,checkBox"
                                                  tools:layout_editor_absoluteY="731dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>