<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ProgressBar
            android:max="100"
            android:progress="0"
            android:background="@color/colorAccent"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:id="@+id/status_progress_bar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/status_textview"/>
    <TextView
            android:textSize="26sp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="Removing Duplicates "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_textview" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView

            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="Backing up contacts, Please wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status_textview"
            app:layout_constraintTop_toBottomOf="@+id/title_textview" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"/>

    <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/finish_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Finish"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.Icon" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/status_progress_bar" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>