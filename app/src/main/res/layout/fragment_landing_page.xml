<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/findDuplicateNamesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Duplicate names"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.Icon" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/lato_bold"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/findDuplicateNumbersButton"/>

    <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/findDuplicateNumbersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Duplicate numbers"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.Icon" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/findDuplicateNamesButton" android:layout_marginBottom="30dp"/>
    <TextView
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:fontFamily="@font/lato_bold"
            android:text="Welcome, How do you want to find duplicates contacts?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/findDuplicateNumbersButton"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="50dp"
            app:layout_constraintVertical_bias="0.41000003" android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>