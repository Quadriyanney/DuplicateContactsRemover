<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.google.android.material.button.MaterialButton
            android:id="@+id/findDuplicateNamesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Duplicate names"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.Icon" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/lato_bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/findDuplicateNumbersButton"
            app:layout_constraintHorizontal_bias="0.5"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/findDuplicateNumbersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Duplicate numbers"
            app:cornerRadius="24dp"
            style="@style/Widget.MaterialComponents.Button.Icon" android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/lato_bold"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/findDuplicateNamesButton"
            app:layout_constraintVertical_chainStyle="packed"/>


</androidx.constraintlayout.widget.ConstraintLayout>